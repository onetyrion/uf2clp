---
import "../styles/global.css";
import { FinanceBackground } from "../components/atoms/FinanceBackground";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth dark">
  <head>
    <!-- Google Tag Manager -->
    <script>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-MFGCC357");
    </script>
    <!-- End Google Tag Manager -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/favicon.svg" />
    <link rel="mask-icon" href="/favicon.svg" color="#2563eb" />
    <meta name="theme-color" content="#0f172a" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Primary Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta
      name="description"
      content="Calculadora de UF a CLP actualizada al instante. Conversor simple, rápido y preciso del valor de la UF hoy en Chile. Gráficos históricos y tendencias."
    />
    <meta
      name="keywords"
      content="calculadora uf, uf2clp, valor uf hoy, uf a pesos, conversor uf, indicadores economicos chile, unidad de fomento"
    />
    <link rel="canonical" href={new URL(Astro.url.pathname, Astro.site)} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="Calculadora de UF a CLP actualizada al instante. Conversor simple, rápido y preciso del valor de la UF hoy en Chile."
    />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta
      property="twitter:description"
      content="Calculadora de UF a CLP actualizada al instante. Conversor simple, rápido y preciso del valor de la UF hoy en Chile."
    />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800&display=swap"
      rel="stylesheet"
    />

    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebApplication",
        "name": "UF2CLP",
        "url": "https://uf2clp.cl",
        "description": "Calculadora y conversor de UF a Peso Chileno con datos actualizados diariamente.",
        "applicationCategory": "FinanceApplication",
        "operatingSystem": "Web",
        "offers": {
          "@type": "Offer",
          "price": "0",
          "priceCurrency": "CLP"
        }
      }
    </script>

    <script is:inline>
      // Force dark mode
      document.documentElement.classList.add("dark");
      if (typeof localStorage !== "undefined") {
        localStorage.setItem("theme", "dark");
      }
    </script>
    <script src="/src/pwa.ts"></script>
  </head>
  <body
    class="transition-colors duration-500 bg-slate-100 dark:bg-gradient-to-br dark:from-slate-950 dark:to-slate-900 min-h-screen text-slate-900 dark:text-white font-sans"
  >
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-MFGCC357"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->
    <FinanceBackground client:only="react" />
    <slot />
  </body>
</html>
